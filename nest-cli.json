{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "configurations/*.json",
        "outDir": "dist/src/",
        "watchAssets": true
      },
      {
        "include": "common/mailer/templates/*.hbs",
        "outDir": "dist/src/",
        "watchAssets": true
      }
    ]
  }
}
